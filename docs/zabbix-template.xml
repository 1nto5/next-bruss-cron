<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>6.0</version>
    <date>2024-01-15T10:00:00Z</date>
    <templates>
        <template>
            <template>Next-Bruss Cron Monitor</template>
            <name>Next-Bruss Cron Monitor</name>
            <description>Monitoring template for Next-Bruss Cron application</description>
            <groups>
                <group>
                    <name>Templates/Applications</name>
                </group>
            </groups>
            <items>
                <!-- Overall Health Status -->
                <item>
                    <name>Application Health Status</name>
                    <type>HTTP_AGENT</type>
                    <key>next.bruss.health.status</key>
                    <delay>60s</delay>
                    <history>7d</history>
                    <trends>30d</trends>
                    <value_type>CHAR</value_type>
                    <description>Overall application health status</description>
                    <url>{$HEALTH_CHECK_URL}/health</url>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.status</params>
                        </step>
                    </preprocessing>
                    <tags>
                        <tag>
                            <tag>Application</tag>
                            <value>Next-Bruss</value>
                        </tag>
                    </tags>
                </item>

                <!-- Numeric Health Status for Triggers -->
                <item>
                    <name>Application Health Status (Numeric)</name>
                    <type>HTTP_AGENT</type>
                    <key>next.bruss.health.status.numeric</key>
                    <delay>60s</delay>
                    <history>7d</history>
                    <trends>30d</trends>
                    <value_type>UNSIGNED</value_type>
                    <description>Numeric health status (1=healthy, 0=unhealthy)</description>
                    <url>{$HEALTH_CHECK_URL}/health/zabbix</url>
                    <tags>
                        <tag>
                            <tag>Application</tag>
                            <value>Next-Bruss</value>
                        </tag>
                    </tags>
                </item>

                <!-- MongoDB Status -->
                <item>
                    <name>MongoDB Status</name>
                    <type>HTTP_AGENT</type>
                    <key>next.bruss.mongodb.status</key>
                    <delay>60s</delay>
                    <history>7d</history>
                    <trends>30d</trends>
                    <value_type>UNSIGNED</value_type>
                    <description>MongoDB connection status (1=healthy, 0=unhealthy)</description>
                    <url>{$HEALTH_CHECK_URL}/health/zabbix/mongodb</url>
                    <tags>
                        <tag>
                            <tag>Component</tag>
                            <value>MongoDB</value>
                        </tag>
                    </tags>
                </item>

                <!-- LDAP Status -->
                <item>
                    <name>LDAP Status</name>
                    <type>HTTP_AGENT</type>
                    <key>next.bruss.ldap.status</key>
                    <delay>60s</delay>
                    <history>7d</history>
                    <trends>30d</trends>
                    <value_type>UNSIGNED</value_type>
                    <description>LDAP connection status (1=healthy, 0=unhealthy)</description>
                    <url>{$HEALTH_CHECK_URL}/health/zabbix/ldap</url>
                    <tags>
                        <tag>
                            <tag>Component</tag>
                            <value>LDAP</value>
                        </tag>
                    </tags>
                </item>

                <!-- R2platnik Status -->
                <item>
                    <name>R2platnik SQL Status</name>
                    <type>HTTP_AGENT</type>
                    <key>next.bruss.r2platnik.status</key>
                    <delay>60s</delay>
                    <history>7d</history>
                    <trends>30d</trends>
                    <value_type>UNSIGNED</value_type>
                    <description>R2platnik SQL Server connection status (1=healthy, 0=unhealthy)</description>
                    <url>{$HEALTH_CHECK_URL}/health/zabbix/r2platnik</url>
                    <tags>
                        <tag>
                            <tag>Component</tag>
                            <value>R2platnik</value>
                        </tag>
                    </tags>
                </item>

                <!-- Application Uptime -->
                <item>
                    <name>Application Uptime</name>
                    <type>HTTP_AGENT</type>
                    <key>next.bruss.uptime</key>
                    <delay>300s</delay>
                    <history>7d</history>
                    <trends>30d</trends>
                    <value_type>UNSIGNED</value_type>
                    <units>s</units>
                    <description>Application uptime in seconds</description>
                    <url>{$HEALTH_CHECK_URL}/health</url>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.uptime</params>
                        </step>
                    </preprocessing>
                    <tags>
                        <tag>
                            <tag>Application</tag>
                            <value>Next-Bruss</value>
                        </tag>
                    </tags>
                </item>

                <!-- MongoDB Response Time -->
                <item>
                    <name>MongoDB Response Time</name>
                    <type>HTTP_AGENT</type>
                    <key>next.bruss.mongodb.response_time</key>
                    <delay>60s</delay>
                    <history>7d</history>
                    <trends>30d</trends>
                    <value_type>UNSIGNED</value_type>
                    <units>ms</units>
                    <description>MongoDB connection response time</description>
                    <url>{$HEALTH_CHECK_URL}/health</url>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.checks.mongodb.responseTime</params>
                            <error_handler>CUSTOM_VALUE</error_handler>
                            <error_handler_params>0</error_handler_params>
                        </step>
                    </preprocessing>
                    <tags>
                        <tag>
                            <tag>Component</tag>
                            <value>MongoDB</value>
                        </tag>
                    </tags>
                </item>

                <!-- HTTP Response Time -->
                <item>
                    <name>Health Check Response Time</name>
                    <type>SIMPLE</type>
                    <key>net.tcp.service.perf[http,"{$HEALTH_CHECK_HOST}",{$HEALTH_CHECK_PORT}]</key>
                    <delay>60s</delay>
                    <history>7d</history>
                    <trends>30d</trends>
                    <value_type>FLOAT</value_type>
                    <units>s</units>
                    <description>Health check endpoint response time</description>
                    <tags>
                        <tag>
                            <tag>Application</tag>
                            <value>Next-Bruss</value>
                        </tag>
                    </tags>
                </item>
            </items>

            <triggers>
                <!-- Critical: Application is down -->
                <trigger>
                    <expression>last(/Next-Bruss Cron Monitor/next.bruss.health.status.numeric)=0</expression>
                    <name>Next-Bruss Cron: Application is unhealthy</name>
                    <priority>DISASTER</priority>
                    <description>The Next-Bruss Cron application is not responding or unhealthy</description>
                    <tags>
                        <tag>
                            <tag>Service</tag>
                            <value>Next-Bruss</value>
                        </tag>
                    </tags>
                </trigger>

                <!-- High: MongoDB is down -->
                <trigger>
                    <expression>last(/Next-Bruss Cron Monitor/next.bruss.mongodb.status)=0</expression>
                    <name>Next-Bruss Cron: MongoDB connection failed</name>
                    <priority>HIGH</priority>
                    <description>Cannot connect to MongoDB database</description>
                    <tags>
                        <tag>
                            <tag>Component</tag>
                            <value>MongoDB</value>
                        </tag>
                    </tags>
                </trigger>

                <!-- Warning: LDAP is down -->
                <trigger>
                    <expression>last(/Next-Bruss Cron Monitor/next.bruss.ldap.status)=0</expression>
                    <name>Next-Bruss Cron: LDAP connection failed</name>
                    <priority>WARNING</priority>
                    <description>Cannot connect to LDAP server</description>
                    <tags>
                        <tag>
                            <tag>Component</tag>
                            <value>LDAP</value>
                        </tag>
                    </tags>
                </trigger>

                <!-- Warning: R2platnik is down -->
                <trigger>
                    <expression>last(/Next-Bruss Cron Monitor/next.bruss.r2platnik.status)=0</expression>
                    <name>Next-Bruss Cron: R2platnik SQL connection failed</name>
                    <priority>WARNING</priority>
                    <description>Cannot connect to R2platnik SQL Server</description>
                    <tags>
                        <tag>
                            <tag>Component</tag>
                            <value>R2platnik</value>
                        </tag>
                    </tags>
                </trigger>

                <!-- Warning: Slow MongoDB response -->
                <trigger>
                    <expression>avg(/Next-Bruss Cron Monitor/next.bruss.mongodb.response_time,5m)&gt;3000</expression>
                    <name>Next-Bruss Cron: MongoDB slow response</name>
                    <priority>WARNING</priority>
                    <description>MongoDB response time is above 3 seconds</description>
                    <tags>
                        <tag>
                            <tag>Component</tag>
                            <value>MongoDB</value>
                        </tag>
                    </tags>
                </trigger>

                <!-- Info: Application recently restarted -->
                <trigger>
                    <expression>last(/Next-Bruss Cron Monitor/next.bruss.uptime)&lt;300</expression>
                    <name>Next-Bruss Cron: Application recently restarted</name>
                    <priority>INFO</priority>
                    <description>Application uptime is less than 5 minutes</description>
                    <tags>
                        <tag>
                            <tag>Service</tag>
                            <value>Next-Bruss</value>
                        </tag>
                    </tags>
                </trigger>

                <!-- Warning: Slow health check response -->
                <trigger>
                    <expression>avg(/Next-Bruss Cron Monitor/net.tcp.service.perf[http,"{$HEALTH_CHECK_HOST}",{$HEALTH_CHECK_PORT}],5m)&gt;5</expression>
                    <name>Next-Bruss Cron: Health check slow response</name>
                    <priority>WARNING</priority>
                    <description>Health check response time is above 5 seconds</description>
                    <tags>
                        <tag>
                            <tag>Service</tag>
                            <value>Next-Bruss</value>
                        </tag>
                    </tags>
                </trigger>
            </triggers>

            <macros>
                <macro>
                    <macro>{$HEALTH_CHECK_URL}</macro>
                    <value>http://localhost:3001</value>
                    <description>Health check endpoint URL</description>
                </macro>
                <macro>
                    <macro>{$HEALTH_CHECK_HOST}</macro>
                    <value>localhost</value>
                    <description>Health check host</description>
                </macro>
                <macro>
                    <macro>{$HEALTH_CHECK_PORT}</macro>
                    <value>3001</value>
                    <description>Health check port</description>
                </macro>
            </macros>

            <dashboards>
                <dashboard>
                    <name>Next-Bruss Cron Dashboard</name>
                    <pages>
                        <page>
                            <widgets>
                                <!-- Overall Status Widget -->
                                <widget>
                                    <type>ITEM</type>
                                    <name>Application Status</name>
                                    <x>0</x>
                                    <y>0</y>
                                    <width>4</width>
                                    <height>2</height>
                                    <fields>
                                        <field>
                                            <type>ITEM</type>
                                            <name>itemid</name>
                                            <value>
                                                <host>Next-Bruss Cron Monitor</host>
                                                <key>next.bruss.health.status</key>
                                            </value>
                                        </field>
                                    </fields>
                                </widget>

                                <!-- Components Status -->
                                <widget>
                                    <type>GRAPH_CLASSIC</type>
                                    <name>Components Status</name>
                                    <x>4</x>
                                    <y>0</y>
                                    <width>8</width>
                                    <height>4</height>
                                </widget>

                                <!-- Response Times -->
                                <widget>
                                    <type>GRAPH_CLASSIC</type>
                                    <name>Response Times</name>
                                    <x>0</x>
                                    <y>4</y>
                                    <width>12</width>
                                    <height>4</height>
                                </widget>

                                <!-- Problems Widget -->
                                <widget>
                                    <type>PROBLEMS</type>
                                    <name>Current Problems</name>
                                    <x>0</x>
                                    <y>8</y>
                                    <width>12</width>
                                    <height>4</height>
                                </widget>
                            </widgets>
                        </page>
                    </pages>
                </dashboard>
            </dashboards>
        </template>
    </templates>
</zabbix_export>